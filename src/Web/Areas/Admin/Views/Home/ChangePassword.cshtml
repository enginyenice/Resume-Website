@model AppUserForPasswordDto
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-danger">Şifreniz değiştirildikten sonra otomatik olarak çıkış yapılacaktır.</div>
<form asp-action="ChangePassword" method="post">
	<input type="hidden" asp-for="@Model.Id" />

	<div class="form-group">
		<label>Şifre</label>
		<input asp-for="Password" class="form-control" type="password" />
		<span class="text-danger" asp-validation-for="@Model.Password"></span>
	</div>

	<div class="form-group">
		<label>Şifre Tekrar</label>
		<input asp-for="@Model.ConfirmPassword" class="form-control" type="password" />
		<span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
	</div>

	<div class="form-group">
		<button type="submit" class="btn btn-success">Kaydet</button>
	</div>

</form>