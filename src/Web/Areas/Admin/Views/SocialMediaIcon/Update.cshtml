@model SocialMediaIconUpdateDto

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Update" method="post">
	<input type="hidden" asp-for="@Model.Id" />
	<div class="form-group">
		<label>Icon</label>
		<input asp-for="@Model.Icon" class="form-control" />
		<span class="text-danger" asp-validation-for="@Model.Icon"></span>
	</div>

	<div class="form-group">
		<label>Link</label>
		<input asp-for="@Model.Link" class="form-control" />
		<span class="text-danger" asp-validation-for="@Model.Link"></span>
	</div>

	<div class="form-group">
		<button type="submit" class="btn btn-success">Kaydet</button>
	</div>



</form>