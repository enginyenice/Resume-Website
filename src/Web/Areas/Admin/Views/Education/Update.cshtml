@model EducationUpdateDto

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Update" method="post">

	<input type="hidden" asp-for="Id"/>
	<div class="form-group">
		<label>Eğitim Aldığı Kurum</label>
		<input asp-for="@Model.Title" class="form-control" />
		<span class="text-danger" asp-validation-for="@Model.Title"></span>
	</div>

	<div class="form-group">
		<label>Eğitim Alanı</label>
		<input asp-for="@Model.SubTitle" class="form-control" />
		<span class="text-danger" asp-validation-for="@Model.SubTitle"></span>
	</div>

	<div class="form-group">
		<label>Başlangıç Tarihi</label>
		<input asp-for="@Model.StartDate" type="date" class="form-control" />
		<span class="text-danger" asp-validation-for="@Model.StartDate"></span>
	</div>

	<div class="form-group">
		<label>Bitiş Tarihi</label>
		<input asp-for="@Model.EndDate" type="date" class="form-control" />
		<span class="text-danger" asp-validation-for="@Model.EndDate"></span>
	</div>

	<div class="form-group">
		<label>Derecesi</label>
		<textarea asp-for="@Model.Description" class="form-control"></textarea>
		<span class="text-danger" asp-validation-for="@Model.Description"></span>
	</div>


	<div class="form-group">
		<button type="submit" class="btn btn-success">Kaydet</button>
	</div>



</form>