@model List<DTO.DTOs.EducationDtos.EducationListDto>
@if(Model.Count > 0) {
<section class="resume-section" id="education">
	<div class="resume-section-content">
		<h2 class="mb-5">Education</h2>
		@foreach (var item in @Model)
		{
			<div class="d-flex flex-column flex-md-row justify-content-between mb-5">
				<div class="flex-grow-1">
					<h3 class="mb-0">@item.Title</h3>
					<div class="subheading mb-3">@item.SubTitle</div>
					<div>@item.Description</div>
				</div>
				<div class="flex-shrink-0"><span class="text-primary">@item.StartDate.ToString("Y") - @(!string.IsNullOrWhiteSpace(item.EndDate.ToString()) ? @item.EndDate?.ToString("Y") : "Present")</span></div>
			</div>
		}
	</div>
</section>
}